<MudNavMenu>
    @foreach (var navPage in (Pages ?? Enumerable.Empty<NavigatablePage>()))
    {
        if(navPage.SubPages?.Any() ?? false)
        {
            <MudNavGroup Title="@TS.SafeGet(navPage.TranslationKey ?? "")" Expanded="false">
                @foreach(var subNavPage in navPage.SubPages)
                {
                    <MudNavLink Href="@subNavPage.Location">@TS.SafeGet(subNavPage.TranslationKey ?? "")</MudNavLink>
                }
            </MudNavGroup>
        }
        else
        {
            <MudNavLink Href="@navPage.Location">@TS.SafeGet(navPage.TranslationKey ?? "")</MudNavLink>
        }
    }
</MudNavMenu>
